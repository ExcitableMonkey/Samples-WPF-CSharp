<Window x:Class="BusinessObjects.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Using Business Objects" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen" Icon="/UsingBusinessObjects;component/app.net.ico" ResizeMode="NoResize">
    <StackPanel>
        <GroupBox Margin="4" Header="IEnumerable">
            <DockPanel MinWidth="300" LastChildFill="False" Margin="4" >
                <Button MinWidth="100" Margin="4" DockPanel.Dock="Right" Name="btPreviewIEnumerable" Click="btPreviewIEnumerable_Click">Preview</Button>
                <Button MinWidth="100" Margin="4" DockPanel.Dock="Right" Name="btDesignIEnumerable" Click="btDesignIEnumerable_Click">Design</Button>                
            </DockPanel>
        </GroupBox>
        <GroupBox Margin="4, 0, 4, 4" Header="ITypedList">
            <DockPanel MinWidth="300" LastChildFill="False" Margin="4">
                <Button MinWidth="100" Margin="4" DockPanel.Dock="Right" Name="btPreviewITypedList" Click="btPreviewITypedList_Click">Preview</Button>
                <Button MinWidth="100" Margin="4" DockPanel.Dock="Right" Name="btDesignITypedList" Click="btDesignITypedList_Click">Design</Button>
            </DockPanel>
        </GroupBox>
        <Button Width="80" HorizontalAlignment="Right" Margin="4, 4, 10, 4" Click="Button_Click">Close</Button>
    </StackPanel>
</Window>
